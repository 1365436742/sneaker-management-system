/* pages/my/collection-information/index.wxss */
.collection-information {
  font-size: 30rpx;
}

.collection-information .divider-line {
  width: 100%;
  height: 20rpx;
  background-color: #f5f5f5;
}

.collection-information .form-content {
  --td-input-vertical-padding: 0;
}

.collection-information .form-cell .t-cell__title {
  width: 144rpx;
  padding-right: 32rpx;
  flex: none !important;
}

.collection-information .submit {
  box-sizing: border-box;
  padding: 50rpx 30rpx 88rpx 30rpx;
}

.collection-information .submit .btn-submit-save {
  background: #fa4126 !important;
  color: #fff !important;
}

.collection-information .suffix--line {
  width: 1px;
  height: 24px;
  background-color: var(--td-component-stroke, #f3f3f3);
  margin-right: 16px;
}

.collection-information .verify {
  color: var(--td-brand-color, #0052d9);
  font-size: 32rpx;
  min-width: 150rpx;
  text-align: center;
}

.collection-information .verify.loading {
  color: var(--td-brand-color, #cccccc);
}